{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": false,                 /* Parse in strict mode and emit "use strict" for each source file. */
  },
  "include": [
    "src"
  ],
}
